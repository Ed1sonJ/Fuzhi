<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.






    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ToggleButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- Bottom Bar Style -->
    <style name="BottomBarBtnStyle">
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- Overview Style -->
    <style name="OverviewBtnValueNameStyle">
        <item name="android:textSize"> 16sp </item>
        <item name="android:textColor">@color/green_2</item>
    </style>

    <style name="OverviewBtnValueStatusStyle">
        <item name="android:textSize"> 20sp </item>
        <item name="android:textColor">@color/green_2</item>
    </style>

    <style name="OverviewBtnValueStyle">
        <item name="android:textSize"> 24sp </item>
        <item name="android:textColor">@color/green_2</item>
    </style>

    <style name="OverviewBtnValueUnitStyle">
        <item name="android:textSize"> 18sp </item>
        <item name="android:textColor">@color/green_2</item>
    </style>

    <style name="OverviewBtnValueDateStyle">
        <item name="android:textSize"> 12sp </item>
        <item name="android:textColor">@color/gray_3</item>
    </style>
    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- switch 打开时的拇指按钮的颜色 轨迹颜色默认为30%这个颜色 -->
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/green_5</item>
        <!-- switch关闭时的拇指按钮的颜色 -->
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/green_5</item>
        <!-- switch关闭时的轨迹的颜色  30%这个颜色 -->
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/green_5</item>
    </style>

    <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    </style>

</resources>