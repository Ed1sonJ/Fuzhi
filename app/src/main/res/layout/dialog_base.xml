<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!--android:background="@drawable/shape_base_dialog_bg"-->
    <!--android:minHeight="@dimen/baseDialog_layout_height"
            <!-android:layout_weight="1"&ndash;&gt;-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/green_1"
        android:baselineAligned="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/id_base_dialog_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/baseDialog_title_margin_left"
            android:visibility="gone" />

        <TextView
            android:id="@+id/id_base_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="title"
            android:textColor="@color/white"
            android:textSize="@dimen/baseDialog_title_textSize"
            android:textStyle="bold" />
    </LinearLayout>
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:background="@color/gray_5"-->
    <!--android:layout_marginTop="13dp"-->
    <!--&gt;-->
    <!--</View>-->
    <!--摆放不同样式的View-->
    <RelativeLayout
        android:id="@+id/id_base_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"></RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="3dp"
        android:background="@color/gray_5"></View>
    <!--60dp底部-->
    <!--android:layout_weight="1"
        android:minHeight="@dimen/baseDialog_layout_height"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/id_base_dialog_leftBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/seletor_base_dialog_btn"
            android:text="取消"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/id_base_dialog_rightBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/seletor_base_dialog_btn"
            android:text="确定"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>