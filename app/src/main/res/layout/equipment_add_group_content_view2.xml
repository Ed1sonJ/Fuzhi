<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:baselineAligned="true"
        android:background="@color/green_1"
        >

        <ImageView
            android:id="@+id/id_base_dialog_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/id_base_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="title"
            android:textStyle="bold"
            android:textSize="23sp"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">
        <RelativeLayout
            android:id="@+id/add_group_dialog_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitXY"
                android:src="@drawable/revise" />
        </RelativeLayout>
        <EditText
            android:id="@+id/equipment_add_group_edittext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:cursorVisible="true"
            android:hint="请输入一个新的名字"
            android:layout_toRightOf="@+id/add_group_dialog_layout"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/edt"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        >
        <Button
            android:id="@+id/id_base_dialog_leftBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="取消"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/seletor_base_dialog_btn"
            />
        <Button
            android:id="@+id/id_base_dialog_rightBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="确定"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/seletor_base_dialog_btn"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>


</LinearLayout>
