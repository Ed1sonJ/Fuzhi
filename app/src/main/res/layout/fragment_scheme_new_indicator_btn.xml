<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/indicator_image"
            android:layout_width="@dimen/image_size_indicator"
            android:layout_height="@dimen/image_size_indicator"
            android:padding="@dimen/bottom_bar_btn_padding"
            android:scaleType="fitXY"
            android:src="@drawable/icon_wendu"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp" />

        <TextView
            android:id="@+id/indicator_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="控制器"
            android:textSize="@dimen/description_test_size"
            android:gravity="center_horizontal"
            android:layout_marginBottom="3dp" />

</LinearLayout>
