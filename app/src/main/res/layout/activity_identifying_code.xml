<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/identifying_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#87CEFA"
        android:gravity="center"
        android:text="获取验证码"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/identifying_title"
        android:background="@color/white"
        android:gravity="center_vertical|top"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <com.smartfarm.view.CleanEditText
                android:id="@+id/et_pho_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入您的手机号" />

            <Button
                android:id="@+id/btn_yz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#EEB422"
                android:padding="10dp"
                android:text="获取验证码"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="请输入验证码" />

            <com.smartfarm.view.CleanEditText
                android:id="@+id/et_yanzheng"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/btn_post"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#551A8B"
            android:text="提交"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>