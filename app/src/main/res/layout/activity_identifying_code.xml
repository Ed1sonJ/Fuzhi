<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--android:background="#87CEFA"-->
    <Button
        android:id="@+id/identifying_title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/green_1"
        android:gravity="center"
        android:text="获取验证码"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/identifying_title"
        android:gravity="center_vertical|top"
        android:orientation="vertical"
        android:background="@color/gray_6"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <com.smartfarm.view.CleanEditText
                android:id="@+id/et_pho_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入您的手机号"
                android:inputType="number"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/shape_et_phone"/>

            <!--<Button-->
            <!--android:id="@+id/btn_yz"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="#EEB422"-->
            <!--android:padding="10dp"-->
            <!--android:text="获取验证码"-->
            <!--android:textColor="#FFFFFF" />-->
        </LinearLayout>

        <!--<com.smartfarm.view.CleanEditText-->
        <!--android:id="@+id/et_pho_num"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:hint="请输入您的手机号"-->
        <!--android:inputType="number"-->
        <!--android:padding="8dp"-->
        <!--android:background="@drawable/shape_et_phone"/>-->

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal" >

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingLeft="5dp"-->
            <!--android:text="请输入验证码" />-->

            <com.smartfarm.view.CleanEditText
                android:id="@+id/et_yanzheng"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入验证码"
                android:padding="8dp"
                android:inputType="number"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_et_yz"/>
            <!--bg:#EEB422-->
            <TextView
                android:id="@+id/btn_yz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_btn_getyz"
                android:text="获取验证码"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <!--bg:#551A8B-->
        <Button
            android:id="@+id/btn_post"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_btn_postup_normal"
            android:text="提交"
            android:textStyle="bold"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>