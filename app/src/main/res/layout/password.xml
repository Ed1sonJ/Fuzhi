<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="#019B79"
        android:gravity="center_vertical"
        android:padding="0.0px" >

        <RelativeLayout
            android:id="@+id/backR"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_green"
            android:paddingRight="10dp" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/actionbar_white_back_icon"
                android:layout_marginLeft="@dimen/title_logo_left" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/title_logo_right"
                android:layout_toRightOf="@id/back"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="返回"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_text_size"
                android:typeface="monospace" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FFF"
        android:orientation="vertical" >

        <!-- 描边 -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#E6E2DE" />

        <RelativeLayout
            android:id="@+id/zhanghao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#FFF"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp" >

            <EditText
                android:id="@+id/oldPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="#0000"
                android:hint="旧密码"
                android:password="true"
                android:singleLine="true" />
        </RelativeLayout>

        <!-- 描边 -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#E6E2DE" />

        <!-- 密码 -->

        <RelativeLayout
            android:id="@+id/mima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#FFF"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp" >

            <EditText
                android:id="@+id/newPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="#0000"
                android:hint="新密码"
                android:password="true"
                android:singleLine="true" />
        </RelativeLayout>

        <!-- 描边 -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#E6E2DE" />
    </LinearLayout>

    <Button
        android:id="@+id/okBtn"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_btn"
        android:text="确  认"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

</LinearLayout>