<?xml version="1.0" encoding="utf-8"?>
<!-- 登录界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/citylist_divider"
    android:orientation="vertical" >

    <!-- 头部导航 -->

  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:layout_weight="0"
        android:background="#019B79"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/title_logo_left"
            android:src="@drawable/abs__ic_ab_back_holo_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/title_logo_right"
            android:text="注册"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size" />
    </LinearLayout>
    

    <!-- 获取验证码界面 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/citylist_divider"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@color/background_color"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <!-- 根据注册进度改变字体颜色 -->

            <TextView
                android:id="@+id/tv_register_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 输入手机号码"
                android:textColor="@color/action_bar_disable" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:src="@drawable/ic_arrow_right_gray" />

            <TextView
                android:id="@+id/tv_register_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 输入验证码"
                android:textColor="@color/black1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:src="@drawable/ic_arrow_right_gray" />

            <TextView
                android:id="@+id/tv_register_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 信息密码设置"
                android:textColor="@color/black1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:layout_margin="20dip"
            android:background="@color/abs__bright_foreground_holo_dark"
            android:gravity="center" >

            <EditText
                android:id="@+id/edit_mobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@drawable/bg_edit_selected"
                android:hint="请输入您的手机号"
                android:textColor="@color/black2" />
        </LinearLayout>

        <Button
            android:id="@+id/access_password"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_gravity="center"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@color/abs__bright_foreground_disabled_holo_light"
            android:text="获取验证码"
            android:textColor="@color/white" />
        
        
        

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:orientation="horizontal" >

           
        </LinearLayout>
    </LinearLayout>

</LinearLayout>